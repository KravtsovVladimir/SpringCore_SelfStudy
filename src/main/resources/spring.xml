<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.client.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="event" class="com.event.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="consoleEventLogger" class="com.logger.impl.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.logger.impl.FileEventLogger" init-method="init">
        <constructor-arg value="logger.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.logger.impl.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="logger.txt"/>
        <constructor-arg value="5"/>
    </bean>

    <bean id="app" class="com.main.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>